@model IEnumerable<EntityLayer.Customer>
@* Show page in Gridview table for Database*@
@{
    ViewBag.Title = "Customer";
    //Layout = null;
}
<!-- Banner Section Start Here -->
<div class="inner-banner" style="top: 94px;">
    <img src="/images/banner/Customer.JPG" alt="">
    <div class="title">
        <h1>Customers</h1>
        <span><a href="#">Home</a> <i class="fa fa-bolt" aria-hidden="true"></i> <span class="last">Customer</span></span>
    </div>
</div>
<!-- Banner Section end Here -->
<!-- Contact Section Start Here -->
<div class="contact-page-area spc-equal">
    <div class="container">
        <p>
            @Html.ActionLink("Create New", "AddCustomer")
        </p>
        @using (Html.BeginForm("AddCustomer", "Customer", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            <table class="table">
                <tr>
                    @*<th>
                        Customer ID
                    </th>*@
                    <th>
                        First name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Email
                    </th>
                    @*<th>
                           password
                        </th>*@
                    <th>
                        Mobile
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Office Address
                    </th>
                    <th>
                        Is Active
                    </th>
                    @*<th>
                           Ip Address
                        </th>*@
                    <th>
                        Car Registration No
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.CustomerID)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Firstname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                         <td>
                           
                            @if (item.Gender == 1)
                            {
                                <text>Male</text>
                            }
                            else if (item.Gender == 2)
                            {
                                <text>Female</text>
                            }
                            else
                            {
                                <text>Other</text>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.password)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfficeAddress)
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <text>Active</text>
                            }
                            else
                            {
                                <text>InActive</text>
                            }
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.IpAddress)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.CarRegistrationNo)
                        </td>
                        <td>
                            <div>
                                <div style="float:left" title="Edit">
                                    <a href="@Url.Action("addCustomer", "Customer", new { id = item.CustomerID })" class="btn btn-xs btn-info">
                                        <span class="glyphicon glyphicon-edit" aria-hidden="true">Edit</span>
                                    </a>
                                </div>
                                <div style="float:left;margin-left:5px" title="Delete">
                                    @using (Html.BeginForm("Customer", "Customer", new { id = item.CustomerID }, FormMethod.Post))
                                    {
                                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                                        <button type="submit" id="buttonsubmit" value="Delete"
                                                onclick="return confirm('Are you sure?');"
                                                class="btn btn-xs btn-danger">
                                            <span class="glyphicon glyphicon-trash">Delete</span>
                                        </button>
                                    }
                                </div>
                            </div>

                        </td>
                    </tr>
                }

            </table>
        }
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var message = '@TempData["NotifyMessage"]';
        var type = '@TempData["NotifyType"]';
        if (message != "")
            ShowNotify("", message, type);
    });
</script>
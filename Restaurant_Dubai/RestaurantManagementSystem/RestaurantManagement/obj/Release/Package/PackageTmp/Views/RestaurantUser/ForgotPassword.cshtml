@model EntityLayer.RestaurantLogin
@{
    ViewBag.Title = "Log in";
}
<style type="text/css">
    .home2 .header-area {
        padding-bottom: 22px;
    }
</style>
<!-- Banner Section Start Here -->
<div class="inner-banner" style="top: 94px;">
    <img src="/images/banner/Forgot Password.JPG" alt="">
    <div class="title">
        <h1>Forgot Password</h1>
        <span><a href="#">Home</a> <i class="fa fa-bolt" aria-hidden="true"></i> <span class="last">Forgot Password</span></span>
    </div>
</div>
<!-- Banner Section end Here -->
<!-- Contact Section Start Here -->
<div class="contact-page-area spc-equal">
    <div class="container">
        <div class="col-md-offset-3 col-md-6">
            @using (Html.BeginForm("ForgotPassword", "RestaurantUser", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "contact-form",@class="form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <br />
                <fieldset>
                    <div class="form-group">
                        <label for="EmailID">Email ID<span class="req-st"> *</span></label>
                            @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.EmailID, "", new { @class = "text-danger" })
                    </div>   
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Send Link" />                       
                    </div>                
                </fieldset>
            }
            
        </div>


        <div class="col-md-offset-2 col-md-4">
            @*<section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>*@
        </div>
        
    </div>
    @*<p>
            @Html.ActionLink("Register as a new user", "AddRestaurantUser")
        </p>*@

    
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(function () {
        var message = '@TempData["NotifyMessage"]';
        var type = '@TempData["NotifyType"]';
        if (message != "")
            ShowNotify("", message, type);
    });
</script>

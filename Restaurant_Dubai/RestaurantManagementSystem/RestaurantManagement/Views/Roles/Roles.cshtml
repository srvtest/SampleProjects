@using Utility;
@model IEnumerable<EntityLayer.Role>

@{
    ViewBag.Title = "Roles";
    //Layout = null;
}

<!-- Banner Section Start Here -->
<div class="inner-banner" style="height:110px;top: 94px;">
    <img src="/images/banner/8.jpg" style="height:110px;" alt="">
    <div class="title">
        <h1>Role</h1>
        <span><a href="#">Home</a> <i class="fa fa-bolt" aria-hidden="true"></i> <span class="last">Roles</span></span>
    </div>
</div>
<!-- Banner Section end Here -->
<!-- Contact Section Start Here -->
<div class="contact-page-area spc-equal">
    <div class="container">
        <p>
            @Html.ActionLink("Add New", "AddRole")
        </p>
        @using (Html.BeginForm("addrole", "roles", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <table class="table">
                <tr>
                    @*<th>
                            RolesID
                        </th>*@
                    <th>
                        Name
                    </th>
                    <th> Description</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.RolesID)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleDesc)
                        </td>
                        <td>
                            <div>
                                @*@if (!Enum.IsDefined(typeof(CommonEnums.Roles), item.RolesID))
                                {*@
                                    <div style="float:left" title="Edit">
                                        <a href="@Url.Action("addrole", "roles", new { id = item.RolesID })" class="btn btn-xs btn-info">
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true">Edit</span>
                                        </a>
                                    </div>
                                    <div style="float:left;margin-left:5px" title="Delete">
                                                @using (Html.BeginForm("addrole", "roles", new { id = item.RolesID }, FormMethod.Post))
                                                {
                                                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                                                    <button type="submit" id="buttonsubmit" value="Delete"
                                                            onclick="return confirm('Are you sure?');"
                                                            class="btn btn-xs btn-danger">
                                                        <span class="glyphicon glyphicon-trash">Delete</span>
                                                    </button>
                                                }
                                    </div>
                                @*}*@
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var message = '@TempData["NotifyMessage"]';
        var type = '@TempData["NotifyType"]';
        if (message != "")
            ShowNotify("", message, type);
    });
</script>
<script type="text/javascript">
    $(function () {
        var branchID = '@Model.ParentBranchID';
        //alert(branchID);
        if (branchID == '' || branchID <= 0) {
            $('#IsBranch').prop('checked', false);
            $("#ParentBranchID").prop("disabled", true);
            $('.parent-chk').css("display", "none");
        }
        else {
            $('#IsBranch').prop('checked', true);
        }
        $('#IsBranch').click(function () {
            if (!$(this).is(':checked')) {
                $("#ParentBranchID").val('');
                $("#ParentBranchID").prop("disabled", true);
                $('.parent-chk').css("display", "none");
            }
            else {
                $("#ParentBranchID").prop("disabled", false);
                $('.parent-chk').css("display", "inline-block");
            }
        });

        $('#MAP').click(function () {
            $('#res-map').modal('show');
        });


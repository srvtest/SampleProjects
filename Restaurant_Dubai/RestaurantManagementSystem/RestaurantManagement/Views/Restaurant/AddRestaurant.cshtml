                                    <div class="form-group">
                                        <label for="Contact">Contact<span class="req-st"> *</span></label>
                                        @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", @maxlength = "11", @type = "number" })
                                        @Html.ValidationMessageFor(m => m.Contact, "", new { @class = "text-danger" })

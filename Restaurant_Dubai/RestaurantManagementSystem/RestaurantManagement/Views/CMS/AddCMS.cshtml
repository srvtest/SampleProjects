@model EntityLayer.CMS

@{
//Layout = null;
}

<!-- Banner Section Start Here -->
<div class="inner-banner" style="top: 94px;">
    <img src="/images/banner/Add CMS.JPG" alt="">
    <div class="title">
        <h1>CMS</h1>
        <span><a href="#">Home</a> <i class="fa fa-bolt" aria-hidden="true"></i> <span class="last">Add CMS</span></span>
    </div>
</div>
<!-- Banner Section end Here -->
<!-- Contact Section Start Here -->
<div class="contact-page-area spc-equal">
    <div class="container">
        <p>
            @Html.ActionLink("Back to list", "CMS")
        </p>
        <div class="row">
            <div class="col-sm-12">
                <div class="contact-area">
                    @using (Html.BeginForm("AddCMS", "CMS", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {

                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="Title">Title<span class="req-st"> *</span></label>
                                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @id = "txtTitle" })
                                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                    </div>
                                    @if (ViewBag.RoleId == 1)
                                    {
                                        <div class="form-group">
                                            <label for="RestaurantID">Restaurant<span class="req-st"> *</span></label>
                                            @Html.DropDownListFor(m => m.RestaurantID, ViewBag.UserRestaurant as SelectList, "Select Restaurant", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.RestaurantID, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                    else
                                    {
                                        @Html.HiddenFor(m => m.RestaurantID);
                                    }
                                    <div class="form-group">
                                        <label for="CMSTypeID">CMS Type<span class="req-st"> *</span></label>
                                        @Html.DropDownListFor(m => m.CMSTypeID, ViewBag.CMSType as SelectList, "Select CMS Type", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.CMSTypeID, "", new { @class = "text-danger" })
                                    </div>
                                    @if (Model.CMSID > 0)
                                    {
                                        <div class="form-group">
                                            <label for="Status" style="margin-right: 20px;margin-top: 25px;">Status</label>
                                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "" })
                                        </div>
                                    }
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="PageDesc">Page Desc</label>
                                        @Html.TextAreaFor(m => m.PageDesc, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>                       
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group bottom-btn">
                                        <input type="submit" class="btn-send" id="buttonsubmit" value="Submit">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/resources/libs/jquery/jquery-1.11.0.min.js"></script>
<script type="text/javascript" src="~/resources/libs/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="~/resources/libs/ckeditor/adapters/jquery.js"></script>
<script type="text/javascript" src="~/resources/js/index.js"></script>
<script type="text/javascript">
    CKEDITOR.replace('PageDesc');
    $(function () {
        var roleID = '@ViewBag.RoleId';
        if (roleID != 1)
            $('#RestaurantID').val('@ViewBag.RestaurantID');
    });
</script>
<script type="text/javascript">
    $(function () {
        var message = '@TempData["NotifyMessage"]';
        var type = '@TempData["NotifyType"]';
        if (message != "")
            ShowNotify("", message, type);
    });
</script>